@model ExcelResourceManager.Core.Models.Empleado

@{
    ViewData["Title"] = "Editar Empleado";
}

<div class="container mt-4">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card">
                <div class="card-header bg-warning text-dark">
                    <h4 class="mb-0">
                        <i class="bi bi-pencil-fill me-2"></i>
                        Editar Empleado
                    </h4>
                </div>
                <div class="card-body">
                    <form asp-action="Edit" method="post">
                        <input type="hidden" asp-for="Id" />
                        <input type="hidden" asp-for="FechaIngreso" />
                        <input type="hidden" asp-for="Activo" />
                        
                        <div asp-validation-summary="ModelOnly" class="alert alert-danger"></div>
                        
                        <div class="row">
                            <div class="col-md-6 mb-3">
                                <label asp-for="Nombre" class="form-label">Nombre</label>
                                <input asp-for="Nombre" class="form-control" required />
                                <span asp-validation-for="Nombre" class="text-danger"></span>
                            </div>
                            
                            <div class="col-md-6 mb-3">
                                <label asp-for="Apellido" class="form-label">Apellido</label>
                                <input asp-for="Apellido" class="form-control" required />
                                <span asp-validation-for="Apellido" class="text-danger"></span>
                            </div>
                        </div>

                        <div class="mb-3">
                            <label asp-for="Email" class="form-label">Email</label>
                            <input asp-for="Email" type="email" class="form-control" required />
                            <span asp-validation-for="Email" class="text-danger"></span>
                        </div>

                        <div class="row">
                            <div class="col-md-6 mb-3">
                                <label asp-for="Rol" class="form-label">Rol</label>
                                <input asp-for="Rol" class="form-control" required />
                                <span asp-validation-for="Rol" class="text-danger"></span>
                            </div>

                            <div class="col-md-6 mb-3">
                                <label asp-for="UbicacionId" class="form-label">Ubicación</label>
                                <select asp-for="UbicacionId" class="form-select" required>
                                    <option value="1">Guayaquil</option>
                                    <option value="2">Quito</option>
                                    <option value="3">Asunción</option>
                                </select>
                                <span asp-validation-for="UbicacionId" class="text-danger"></span>
                            </div>
                        </div>

                        <div class="alert alert-info">
                            <small>
                                <strong>Fecha de ingreso:</strong> @Model.FechaIngreso.ToString("dd/MM/yyyy")<br />
                                <strong>Estado:</strong> @(Model.Activo ? "Activo" : "Inactivo")
                            </small>
                        </div>

                        <div class="d-flex justify-content-between mt-4">
                            <a asp-action="Index" class="btn btn-secondary">
                                <i class="bi bi-arrow-left me-2"></i>Cancelar
                            </a>
                            <button type="submit" class="btn btn-warning">
                                <i class="bi bi-save me-2"></i>Actualizar
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
