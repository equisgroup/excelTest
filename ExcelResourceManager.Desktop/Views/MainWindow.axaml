<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:vm="using:ExcelResourceManager.Desktop.ViewModels"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d" d:DesignWidth="1200" d:DesignHeight="600"
        x:Class="ExcelResourceManager.Desktop.Views.MainWindow"
        x:DataType="vm:MainWindowViewModel"
        Icon="/Assets/avalonia-logo.ico"
        Title="Excel Resource Manager"
        Width="1200" Height="600">

    <Design.DataContext>
        <vm:MainWindowViewModel/>
    </Design.DataContext>

    <Grid RowDefinitions="Auto,*">
        <!-- Fila 0: Barra de navegación -->
        <Grid Grid.Row="0" Background="#0078D4" ColumnDefinitions="*,Auto">
            <!-- Columna 0: Botones de navegación -->
            <StackPanel Grid.Column="0" Orientation="Horizontal" Margin="10,5">
                <Button Content="Dashboard" 
                        Command="{Binding NavigateCommand}" 
                        CommandParameter="Dashboard"
                        Background="#0078D4"
                        Foreground="White"
                        BorderThickness="0"
                        Margin="5,0"
                        Padding="15,8"/>
                
                <Button Content="Empleados" 
                        Command="{Binding NavigateCommand}" 
                        CommandParameter="Empleados"
                        Background="#0078D4"
                        Foreground="White"
                        BorderThickness="0"
                        Margin="5,0"
                        Padding="15,8"/>
                
                <Button Content="Clientes" 
                        Command="{Binding NavigateCommand}" 
                        CommandParameter="Clientes"
                        Background="#0078D4"
                        Foreground="White"
                        BorderThickness="0"
                        Margin="5,0"
                        Padding="15,8"/>
                
                <Button Content="Vacaciones" 
                        Command="{Binding NavigateCommand}" 
                        CommandParameter="Vacaciones"
                        Background="#0078D4"
                        Foreground="White"
                        BorderThickness="0"
                        Margin="5,0"
                        Padding="15,8"/>
                
                <Button Content="Viajes" 
                        Command="{Binding NavigateCommand}" 
                        CommandParameter="Viajes"
                        Background="#0078D4"
                        Foreground="White"
                        BorderThickness="0"
                        Margin="5,0"
                        Padding="15,8"/>
                
                <Button Content="Soporte" 
                        Command="{Binding NavigateCommand}" 
                        CommandParameter="Soporte"
                        Background="#0078D4"
                        Foreground="White"
                        BorderThickness="0"
                        Margin="5,0"
                        Padding="15,8"/>
                
                <Button Content="Feriados" 
                        Command="{Binding NavigateCommand}" 
                        CommandParameter="Feriados"
                        Background="#0078D4"
                        Foreground="White"
                        BorderThickness="0"
                        Margin="5,0"
                        Padding="15,8"/>
                
                <Button Content="Conflictos" 
                        Command="{Binding NavigateCommand}" 
                        CommandParameter="Conflictos"
                        Background="#0078D4"
                        Foreground="White"
                        BorderThickness="0"
                        Margin="5,0"
                        Padding="15,8"/>
                
                <Button Content="Reportes" 
                        Command="{Binding NavigateCommand}" 
                        CommandParameter="Reportes"
                        Background="#0078D4"
                        Foreground="White"
                        BorderThickness="0"
                        Margin="5,0"
                        Padding="15,8"/>
            </StackPanel>

            <!-- Columna 1: Indicador de modo y toggle -->
            <StackPanel Grid.Column="1" 
                        Orientation="Horizontal" 
                        HorizontalAlignment="Right" 
                        VerticalAlignment="Center"
                        Margin="10,5">
                <TextBlock Text="{Binding ModoActual}" 
                           Foreground="White"
                           VerticalAlignment="Center"
                           Margin="0,0,10,0"
                           FontWeight="Bold"/>
                
                <ToggleSwitch IsChecked="{Binding IsTestMode}"
                              OnContent="Prueba"
                              OffContent="Producción"
                              Margin="5,0"/>
            </StackPanel>
        </Grid>

        <!-- Fila 1: Contenido de la vista actual -->
        <ContentControl Grid.Row="1" 
                        Content="{Binding CurrentView}"
                        Margin="10"/>
    </Grid>

</Window>
