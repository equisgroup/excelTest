<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:vm="using:ExcelResourceManager.Desktop.ViewModels"
             xmlns:conv="using:ExcelResourceManager.Desktop.Converters"
             mc:Ignorable="d" d:DesignWidth="1200" d:DesignHeight="600"
             x:Class="ExcelResourceManager.Desktop.Views.VacacionesView"
             x:DataType="vm:VacacionesViewModel">
    
    <UserControl.Resources>
        <conv:NivelConflictoToColorConverter x:Key="NivelToColor"/>
        <conv:NivelConflictoToBorderColorConverter x:Key="NivelToBorderColor"/>
        <conv:EstadoVacacionToColorConverter x:Key="EstadoToColor"/>
    </UserControl.Resources>
    
    <Design.DataContext>
        <vm:VacacionesViewModel/>
    </Design.DataContext>

    <Grid ColumnDefinitions="2*,*" Margin="10">
        <!-- Columna 0: Lista de Vacaciones -->
        <Border Grid.Column="0" 
                BorderBrush="#CCCCCC" 
                BorderThickness="1" 
                CornerRadius="4"
                Margin="0,0,10,0"
                Padding="10">
            <Grid RowDefinitions="Auto,*">
                <TextBlock Grid.Row="0" 
                           Text="Vacaciones Registradas" 
                           FontSize="18" 
                           FontWeight="Bold"
                           Margin="0,0,0,10"/>
                
                <DataGrid Grid.Row="1" 
                          ItemsSource="{Binding Vacaciones}"
                          AutoGenerateColumns="False"
                          IsReadOnly="True"
                          GridLinesVisibility="All"
                          BorderThickness="1"
                          BorderBrush="#DDDDDD">
                    <DataGrid.Columns>
                        <DataGridTextColumn Header="Empleado" 
                                          Binding="{Binding EmpleadoNombre}" 
                                          Width="*"/>
                        
                        <DataGridTextColumn Header="Fecha Inicio" 
                                          Binding="{Binding FechaInicio, StringFormat='{}{0:dd/MM/yyyy}'}" 
                                          Width="110"/>
                        
                        <DataGridTextColumn Header="Fecha Fin" 
                                          Binding="{Binding FechaFin, StringFormat='{}{0:dd/MM/yyyy}'}" 
                                          Width="110"/>
                        
                        <DataGridTextColumn Header="Días Hábiles" 
                                          Binding="{Binding DiasHabiles}" 
                                          Width="100"/>
                        
                        <DataGridTemplateColumn Header="Estado" Width="110">
                            <DataGridTemplateColumn.CellTemplate>
                                <DataTemplate>
                                    <Border Padding="5,2" 
                                            CornerRadius="3"
                                            Background="{Binding Estado, Converter={StaticResource EstadoToColor}}"
                                            HorizontalAlignment="Center">
                                        <TextBlock Text="{Binding Estado}" 
                                                   Foreground="White"
                                                   FontWeight="SemiBold"
                                                   HorizontalAlignment="Center"/>
                                    </Border>
                                </DataTemplate>
                            </DataGridTemplateColumn.CellTemplate>
                        </DataGridTemplateColumn>
                        
                        <DataGridCheckBoxColumn Header="Conflictos" 
                                              Binding="{Binding TieneConflictos}" 
                                              Width="90"/>
                    </DataGrid.Columns>
                </DataGrid>
            </Grid>
        </Border>

        <!-- Columna 1: Formulario Nueva Vacación -->
        <Border Grid.Column="1" 
                BorderBrush="#CCCCCC" 
                BorderThickness="1" 
                CornerRadius="4"
                Padding="15">
            <ScrollViewer VerticalScrollBarVisibility="Auto">
                <StackPanel Spacing="12">
                    <TextBlock Text="Nueva Solicitud de Vacación" 
                               FontSize="16" 
                               FontWeight="Bold"
                               Margin="0,0,0,10"/>
                    
                    <!-- Empleado -->
                    <StackPanel>
                        <TextBlock Text="Empleado:" 
                                   FontWeight="SemiBold" 
                                   Margin="0,0,0,4"/>
                        <ComboBox ItemsSource="{Binding Empleados}"
                                  SelectedItem="{Binding EmpleadoSeleccionado}"
                                  HorizontalAlignment="Stretch">
                            <ComboBox.ItemTemplate>
                                <DataTemplate>
                                    <TextBlock Text="{Binding NombreCompleto}"/>
                                </DataTemplate>
                            </ComboBox.ItemTemplate>
                        </ComboBox>
                    </StackPanel>
                    
                    <!-- Fecha Inicio -->
                    <StackPanel>
                        <TextBlock Text="Fecha Inicio:" 
                                   FontWeight="SemiBold" 
                                   Margin="0,0,0,4"/>
                        <DatePicker SelectedDate="{Binding FechaInicio}"
                                    HorizontalAlignment="Stretch"/>
                    </StackPanel>
                    
                    <!-- Fecha Fin -->
                    <StackPanel>
                        <TextBlock Text="Fecha Fin:" 
                                   FontWeight="SemiBold" 
                                   Margin="0,0,0,4"/>
                        <DatePicker SelectedDate="{Binding FechaFin}"
                                    HorizontalAlignment="Stretch"/>
                    </StackPanel>
                    
                    <!-- Días Hábiles -->
                    <StackPanel>
                        <TextBlock FontWeight="SemiBold">
                            <Run Text="Días Hábiles:"/>
                            <Run Text="{Binding DiasHabiles}" 
                                 FontSize="16" 
                                 Foreground="#0078D4"/>
                        </TextBlock>
                    </StackPanel>
                    
                    <!-- Observaciones -->
                    <StackPanel>
                        <TextBlock Text="Observaciones:" 
                                   FontWeight="SemiBold" 
                                   Margin="0,0,0,4"/>
                        <TextBox Text="{Binding Observaciones}"
                                 Height="80"
                                 AcceptsReturn="True"
                                 TextWrapping="Wrap"/>
                    </StackPanel>
                    
                    <!-- Alerta de Conflictos Críticos -->
                    <Border IsVisible="{Binding MostrarAlerta}"
                            Background="#FFEBEE"
                            BorderBrush="#F44336"
                            BorderThickness="2"
                            CornerRadius="4"
                            Padding="10">
                        <StackPanel>
                            <TextBlock Text="⚠ ALERTA" 
                                       FontWeight="Bold" 
                                       Foreground="#D32F2F"
                                       Margin="0,0,0,5"/>
                            <TextBlock Text="{Binding MensajeAlerta}" 
                                       Foreground="#D32F2F"
                                       TextWrapping="Wrap"/>
                        </StackPanel>
                    </Border>
                    
                    <!-- Lista de Conflictos -->
                    <StackPanel IsVisible="{Binding !!Conflictos.Count}">
                        <TextBlock Text="Conflictos Detectados:" 
                                   FontWeight="SemiBold" 
                                   Margin="0,0,0,8"/>
                        <ItemsControl ItemsSource="{Binding Conflictos}">
                            <ItemsControl.ItemTemplate>
                                <DataTemplate>
                                    <Border Margin="0,0,0,6" 
                                            Padding="8" 
                                            CornerRadius="3"
                                            BorderThickness="1"
                                            Background="{Binding Nivel, Converter={StaticResource NivelToColor}}"
                                            BorderBrush="{Binding Nivel, Converter={StaticResource NivelToBorderColor}}">
                                        <StackPanel>
                                            <TextBlock Text="{Binding Nivel}" 
                                                       FontWeight="SemiBold" 
                                                       FontSize="11"/>
                                            <TextBlock Text="{Binding Descripcion}" 
                                                       TextWrapping="Wrap"
                                                       FontSize="12"
                                                       Margin="0,2,0,0"/>
                                        </StackPanel>
                                    </Border>
                                </DataTemplate>
                            </ItemsControl.ItemTemplate>
                        </ItemsControl>
                    </StackPanel>
                    
                    <!-- Indicador de Validación -->
                    <ProgressBar IsIndeterminate="{Binding EstaValidando}"
                                 IsVisible="{Binding EstaValidando}"
                                 Height="4"
                                 Margin="0,5"/>
                    
                    <!-- Botones -->
                    <StackPanel Orientation="Horizontal" 
                                Spacing="10" 
                                Margin="0,10,0,0">
                        <Button Content="Guardar" 
                                Command="{Binding GuardarCommand}"
                                Background="#4CAF50"
                                Foreground="White"
                                Padding="20,8"
                                FontWeight="SemiBold"/>
                        
                        <Button Content="Cancelar" 
                                Command="{Binding CancelarCommand}"
                                Background="#9E9E9E"
                                Foreground="White"
                                Padding="20,8"/>
                    </StackPanel>
                </StackPanel>
            </ScrollViewer>
        </Border>
    </Grid>
</UserControl>
